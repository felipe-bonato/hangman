{% extends "base.nunjucks" %}

{% block styles %}
	<link rel="stylesheet" href="home.css">
{% endblock styles %}

{% block body %}
	<h1>Words</h1>
	<span id="add_word--error"></span>
	<input type="text" id="add_word--input"></input><button id="add_word--button">Add</button>
	{% for word in words %}
		<p>{{ word }}</p>
	{% endfor %}
{% endblock body %}

{% block scripts %}
	<script src="add_words.js"></script>
{% endblock scripts %}
